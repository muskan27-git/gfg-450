#include <iostream>
#include <algorithm>

using namespace std;


int main()
{
    int t;
    cout<<"no of testcases:";
    cin>>t;
    while(t--)
    {
        int n;
        cout<<"Enter size of array"<<endl;
        cin>>n;
        int a[n];
        for(int i=0;i<n;i++)
        {
            cin>>a[i];
        }
         int k;
        cin>>k;
        
        sort(a,a+n);
       
        
        cout<<"the smallest " << k << " element is"<<a[k-1]<<endl;
        
    }
    return 0;
}
